{
   "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "esnext"],
      "jsx": "preserve",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "baseUrl": "./src",
      "paths": {
         "com/*": ["components/*"],
         "libs/*": ["libs/*"],
         "interfaces": ["interfaces"],
         "config": ["../config"],
         "config/*": ["../config/*"]
      }
   },
   "include": ["./src/**/*", "./config"]
}
